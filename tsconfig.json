{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "@types/cucumber"]
  },
  "include": [
    "features/*/.ts",
    "steps/*/.ts",
    "support/*/.ts",
    "pages/*/.ts"
  ]
}
